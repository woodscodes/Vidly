@model Vidly.Models.Customer


@{
    ViewBag.Title = "ViewIndividualCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <h2>@Model.Name</h2>
    <ul>
        <li><strong>Membership type:</strong> @Model.MembershipType.Name</li>
        @if (Model.Birthdate != null)
        {
            <li><strong>Date of birth:</strong> @Model.Birthdate.Value.ToShortDateString()</li>
        }

    </ul>

}
else
{
    <h2>Customer not found</h2>
}

