@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All movies <span>@Html.ActionLink("Add movie", "New", "Movies", new { @class = "badge badge-info" })</span></h2>

@if (!Model.Any())
{
    <text>There are no movies</text>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Release Date</th>
                <th>Date Added</th>
                <th>Genre</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Movie", new { id = movie.Id })</td>
                    <td>@movie.ReleaseDate.ToShortDateString()</td>
                    <td>@movie.DateAdded.ToShortDateString()</td>
                    <td>@movie.Genre.GenreType</td>
                </tr>
            }
        </tbody>
    </table>
}


