@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All movies</h2>

<table id="movies" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>

        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts {

    <script>
        $(document).ready(function () {
            $("#movies").DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",                        
                    },
                    {
                        data: "genre.name"
                    },                    
                ]

            });
        });
    </script>

}


